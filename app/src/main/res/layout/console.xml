<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/console_layout">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入x"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:id="@+id/console_x"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入y"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:id="@+id/console_y"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入"
            android:layout_marginLeft="5dp"
            android:id="@+id/console_send"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务端"
            android:layout_marginLeft="5dp"
            android:id="@+id/console_server"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户端"
            android:layout_marginLeft="5dp"
            android:id="@+id/console_client"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="坐标"
            android:id="@+id/console_tips"
            />
    </LinearLayout>

    <com.lza.pad.client.widgets.DrawableView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/console_drawableview"
        />
</LinearLayout>